{
	"name": "hyper-shortcut",
	"displayName": "hyper-shortcut",
	"description": "Easy and powerful shortcut manager for vscode",
	"version": "0.2.1",
	"publisher": "johnrazeur",
	"repository": {
		"type": "git",
		"url": "https://github.com/johnrazeur/hyper-shortcut.git"
	},
	"engines": {
		"vscode": "^1.43.1"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"keywords": [
		"shortcut"
	],
	"icon": "images/icon.png",
	"activationEvents": [
		"onView:hyper-shortcut"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "hyper-shortcut-explorer",
					"title": "Hyper Shortcut",
					"icon": "images/hyper-shortcut-activity-bar.svg"
				}
			]
		},
		"views": {
			"hyper-shortcut-explorer": [
				{
					"id": "hyper-shortcut",
					"name": "Shortcuts"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "hyper-shortcut.refresh",
					"when": "view == hyper-shortcut",
					"group": "navigation"
				}
			]
		},
		"jsonValidation": [
			{
				"fileMatch": "hyper-shortcut.json",
				"url": "./hyper-shortcut-model-definition.json"
			}
		],
		"commands": [
			{
				"command": "hyper-shortcut.refresh",
				"title": "Hyper-Shortcut: Refresh",
				"icon": {
					"light": "images/light/refresh.svg",
					"dark": "images/dark/refresh.svg"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/mustache": "^4.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"mustache": "^4.0.0"
	}
}
